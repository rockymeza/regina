#!/usr/bin/env ruby
require 'lib/regina'

options = Regina.new do
  title 'Pirate Program'
  by 'Rocky Meza'
  by 'William Scales'
  copyright '2010'
  usage 'pirate [options]'
  usage 'pirate [subcommand] [options]'
  
  bool 'pirates', 'Do you want pirates?'
  string 'name', 'What is your name?', :default => 'Rocky Meza'
  int 'amount', 'How many pirates?'
end

p options.options, options.argv, options.flags.map{ |k,v| k + ' ' + v.type }
